@using CinemaProject.MVC.Controllers; 
@model MovieDetails
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div>
    <h1>@Model.Title</h1>
    @if (!(Model.SubTitle is null))
    {
        <h2>@Model.SubTitle</h2>
    }
    <h2>Sorti en : @Model.ReleaseYear (@Model.Duration minutes)</h2>
    @if (TempData.ContainsKey("Id_CinemaPlace"))
    {
        <a asp-controller="Cinema" asp-action="@nameof(CinemaController.Diffusions)" asp-route-id="@TempData["Id_CinemaPlace"]">
            <div>
                Séances
            </div>
        </a>
    }
    else
    {
        <a asp-controller="Cinema" asp-action="@nameof(CinemaController.Index)">
            <div>
                Sélectionnez un cinéma
            </div>
        </a>
    }
</div>
<div>
    <img src="~/assets/posters/@Model.PosterUrl" />
</div>
<div>
    <p>@Model.Synopsis</p>
</div>